<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#C62828" />
            <stroke android:width="2dp" android:color="#B71C1C" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F" />
            <stroke android:width="2dp" android:color="#C62828" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#757575" />
            <stroke android:width="1dp" android:color="#616161" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F44336" />
            <stroke android:width="1dp" android:color="#D32F2F" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>